@model IEnumerable<MyNewTemplate.Models.Attendence>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div class="page-content-wrapper">
    <div class="page-content">



        <!-- BEGIN PAGE HEADER-->
        <h3 class="page-title">
          Attendance
        </h3>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="~/Admin/Index">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="#">Attendance</a>
                    <i class="fa "></i>
                </li>

            </ul>

        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div id="load">

        </div>
        <div class="row">
           
            <div class="col-md-6 form-group text-right">


            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12">

                <!-- BEGIN EXAMPLE TABLE PORTLET-->

                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-trophy"></i>Attendance Summary
                        </div>
                        <div class="tools">
                        </div>
                    </div>

                    <div class="portlet-body">


                        <table class="table table-striped table-bordered table-hover" id="awards">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Employee.emp_fullname)</th>
                                    <th>@Html.DisplayNameFor(model => model.Employee.emp_photo)</th>
                                    <th> @Html.DisplayNameFor(model => model.atten_date)</th>
                                    <th>@Html.DisplayNameFor(model => model.atten_reason)</th>
                                    <th>@Html.DisplayNameFor(model => model.Leave_type.type_name) </th>
                                    <th>@Html.DisplayNameFor(model => model.atten_status)</th>
                                    <th> Action </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>  
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Employee.emp_fullname)
                                        </td>
                                        <td>
                                          <img src="~/Upload/@item.Employee.emp_photo" style="width:100px;height:100px;"/>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.atten_date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.atten_reason)
                                        </td>
                                     
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Leave_type.type_name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.atten_status)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

