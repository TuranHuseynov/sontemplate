@model IEnumerable<MyNewTemplate.Models.Departament>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<!-- BEGIN PAGE CONTENT-->

<div class="row" style="width:1000px; margin-left:250px;">
    <div class="col-md-12">
        <a class="btn green" data-toggle="modal" href="/Departament/Create">
            Add New Department
            <i class="fa fa-plus"></i>
        </a>

        <hr>
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-briefcase"></i>Department List
                </div>
                <div class="tools">
                </div>
            </div>

            <div class="portlet-body">

                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th> @Html.DisplayNameFor(model => model.depart_name) </th>
                            <th> @Html.DisplayNameFor(model => model.Designations) </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.depart_name)
                                </td>
                                <td>
                                    @*@Html.DisplayFor(modelItem => item.Designations)*@ "Design type";
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                </td>
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
      </div>
 </div>
    