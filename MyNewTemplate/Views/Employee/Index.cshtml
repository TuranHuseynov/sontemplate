@model IEnumerable<MyNewTemplate.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div style="margin-left:250px;">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" style="color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.emp_fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departament.depart_name)
                @Html.DisplayNameFor(model => model.Designation.desig_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_date_of_joining)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_work_status)
            </th>
            <th></th>
            <th></th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_fullname)
                </td>
                <td>
                    <img src="~/Upload/@item.emp_photo" style="width:150px;height:150px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departament.depart_name)
                    @Html.DisplayFor(modelItem => item.Designation.desig_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_date_of_joining)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_work_status)

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </table>



</div>







