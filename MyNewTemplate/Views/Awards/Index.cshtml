@model IEnumerable<MyNewTemplate.Models.Award>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


 <!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <div class="page-content">



        <!-- BEGIN PAGE HEADER-->
        <h3 class="page-title">
            Awards
        </h3>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="http://froiden.cloudapp.net/hrm_demo/admin/dashboard">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="#">awards</a>
                    <i class="fa "></i>
                </li>

            </ul>

        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div id="load">

        </div>
        <div class="row">
            <div class="col-md-6">

                <a class="btn green" data-toggle="modal" href="/Awards/Create">
                    Add New Award
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <div class="col-md-6 form-group text-right">


            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12">

                <!-- BEGIN EXAMPLE TABLE PORTLET-->

                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-trophy"></i>awards List
                        </div>
                        <div class="tools">
                        </div>
                    </div>

                    <div class="portlet-body">


                        <table class="table table-striped table-bordered table-hover" id="awards">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.award_name)</th>
                                    <th> @Html.DisplayNameFor(model => model.Employee.emp_fullname)</th>
                                    <th> @Html.DisplayNameFor(model => model.award_reason)</th>
                                    <th> @Html.DisplayNameFor(model => model.award_cash_price)</th>
                                    <th> @Html.DisplayNameFor(model => model.award_date) </th>
                                    <th> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.award_name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.award_reason)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.award_cash_price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.award_date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Employee.emp_fullname)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->

            </div>
        </div>
        <!-- END PAGE CONTENT-->

       


    </div>

</div>